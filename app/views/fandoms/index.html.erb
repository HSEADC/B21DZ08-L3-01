<p style="color: green"><%= notice %></p>

<h1>Fandoms</h1>

<%= link_to "New fandom", new_fandom_path %>

<div id="fandoms">
  <% @fandoms.each do |fandom| %>
    <%= link_to fandom, class: 'Card' do %>
      <%= render fandom %>
      <p>
        <strong>Автор:</strong>
        <%= render fandom.author%>
      </p>
      <p>
        <strong>Описание:</strong>
        <%= fandom.description %>
      </p>
    <% end %>
  <% end %>
</div>