<p style="color: green"><%= notice %></p>

<div class="Card">
  <%= render @fandom %>
  <p>
    <strong>Автор:</strong>
    <%= render @fandom.author%>
  </p>
  <p>
    <strong>Описание:</strong>
    <%= @fandom.description %>
  </p>
</div>

<h3>Комментарии</h3>
<%= link_to "New comment", new_fandom_comment_path(@fandom), class: 'Button'  %>
<%= render @fandom.comment, fandom: @fandom %>

<div class="ButtonsDirection">
  <%= link_to "Edit this fandom", edit_fandom_path(@fandom), class: 'Button'  %> 
  <%= link_to "Back to fandoms", fandoms_path, class: 'Button'  %>

  <%= button_to "Destroy this fandom", @fandom, method: :delete, class: 'Button'  %>
</div>
